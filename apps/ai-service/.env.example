# AI Provider Settings
# Choose one: "openai", "anthropic", or "gemini"
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4.1

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-sonnet-4-5

# Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=false

# API Authentication (leave empty to disable)
X_API_KEY=your-secret-api-key

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Firebase Settings
# Storage bucket name (without gs:// prefix)
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
# Service account JSON path (local development only, optional on Cloud Run)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
