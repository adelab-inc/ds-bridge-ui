{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js 서버용 TypeScript Config", 
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}