{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "라이브러리 패키지용 TypeScript Config",
  "extends": "./base.json", 
  "compilerOptions": {
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"]
}