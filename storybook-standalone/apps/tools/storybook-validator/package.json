{
  "name": "@aplus/storybook-validator",
  "version": "1.0.0",
  "description": "Claude Desktop MCP Extension for Storybook style validation",
  "type": "module",
  "main": "dist/bundle.js",
  "bin": {
    "storybook-validator": "dist/bundle.js"
  },
  "scripts": {
    "dev": "node esbuild.config.js --watch",
    "build": "node esbuild.config.js --minify",
    "build:dev": "node esbuild.config.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "inspector": "pnpm run build:dev && npx @modelcontextprotocol/inspector node dist/bundle.js",
    "package": "./create-mcpb.sh"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
